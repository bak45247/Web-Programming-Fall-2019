<link rel="stylesheet" href="~/css/styles.css" />

@model PotionsDatabase

@{
    ViewData["Title"] = "Potions";
}

@if (Model.Any())
{
    <form method="post" action="potions/addIngredient">
        @for (var i = 0; i < Model.Count(); i++)
        {
            <div>
                <p class="list">@Model.Get(i).Name</p>
                <input type="checkbox" name=@Model.Get(i).Name value=@Model.Get(i).Name />
            </div>
        }
        <br />
        <input type="submit" value="Mix" />
    </form>
}
else
{
    <div>There are no spells to display</div>
}